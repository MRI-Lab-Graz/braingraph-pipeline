{
  "description": "Quick test configuration for beginners - minimal parameter sweep",
  "comment": "Use this for testing OptiConn workflow with minimal computational requirements",
  
  "dsi_studio_cmd": "dsi_studio",
  
  "atlases": [
    "FreeSurferDKT_Cortical"
  ],
  "connectivity_values": [
    "count",
    "fa"
  ],
  
  "tract_count": 50000,
  "thread_count": 4,
  
  "tracking_parameters": {
    "method": 0,
    "otsu_threshold": 0.5,
    "fa_threshold": 0.1,
    "turning_angle": 0.0,
    "step_size": 0.0,
    "smoothing": 0.0,
    "min_length": 10,
    "max_length": 200,
    "track_voxel_ratio": 3.0,
    "check_ending": 0,
    "random_seed": 0,
    "dt_threshold": 0.1
  },
  
  "connectivity_options": {
    "connectivity_type": "pass",
    "connectivity_threshold": 0.001,
    "connectivity_output": "matrix,measure"
  },
  
  "sweep_parameters": {
    "description": "Minimal parameter sweep for quick testing",
    "comment": "Only tests a few parameter combinations - great for learning the workflow",
    
    "fa_threshold_range": [0.1, 0.15],
    "min_length_range": [10, 20],
    "track_voxel_ratio_range": [2.0, 3.0],
    "connectivity_threshold_range": [0.001],
    "tract_count_range": [50000, 100000],
    
    "sampling": {
      "method": "grid",
      "n_samples": 8,
      "random_seed": 42
    }
  }
}